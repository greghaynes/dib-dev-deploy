#!/bin/bash

DDD_WORKDIR=${DDD_WORKDIR:-~/ddd-workdir}

# repo locations
DDD_REPOLOCATION=${DDD_REPOLOCATION:-$(dirname $0)/../}
DDD_DIB_REPOLOCATION=${DDD_DIB_REPOLOCATION:-$DDD_WORKDIR/tools/diskimage-builder}
DDD_DIB_UTILS_REPOLOCATION=${DDD_DIB_UTILS_REPOLOCATION:-$DDD_WORKDIR/tools/dib-utils}
DDD_MUSH_REPOLOCATION=${DDD_MUSH_REPOLOCATION:-$DDD_WORKDIR/tools/mush}

DDD_VM_TEMPLATE=${DDD_VM_TEMPLATE:-"$DDD_REPOLOCATION/templates/vm.xml"}
DDD_VM_IMAGES_DIR=${DDD_IMAGES_DIR:-"$DDD_WORKDIR/images"}
DDD_VM_DEFINITIONS_DIR=${DDD_VM_DEFINITIONS_DIR:-"$DDD_WORKDIR/vm-definitions"}

# vm settings
DDD_VM_MEMORY=${DDD_VM_MEMORY:-2048}
DDD_VM_CPUS=${DDD_VM_CPUS:-1}
DDD_EMULATOR=${DDD_EMULATOR:-/usr/bin/kvm-spice}
DDD_INTERFACE_1_SOURCE_INTERFACE=${DDD_INTERFACE_1_SOURCE_INTERFACE:-virbr0}
